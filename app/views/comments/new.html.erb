<% provide(:title, 'New Comment') %>

<h1>New Comment</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:comment, url: comments_path) do |f| %>
    
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>
      
      <%= f.label :body %>
      <%= f.text_field :body %>

      <%= f.label :post_id %>
      <%= f.text_field :post_id %>
      
      <%= f.submit "Create comment", class: "btn btn-large btn-primary" %>
      
    <% end %>
    
    </div>
</div>