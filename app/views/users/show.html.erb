<% provide( :title,  @user.name ) %>
<div class="row">
  <aside class="span4">
    <section>
      <div>
        <h1>
          <%= gravatar_for(@user) %>
          <%= @user.name %>
        </h1>
        <br/>
      </div>
      <h3>
          <%= link_to "Make post", root_path, class: "btn btn-large btn-primary" %>
      </h3>
    </section>
  </aside>
  <div class="span8">
    <% if @user.microposts.any? %>
      <h3>Posts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
        
