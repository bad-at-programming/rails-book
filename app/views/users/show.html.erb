<% provide( :title,  @user.name ) %>
<div class="row">
  <aside class="span4">
    <section>
        <h1>
          <%= gravatar_for(@user) %>
          <%= @user.name %>
        </h1>
    </section>
    <% if current_user?(User.find(params[:id])) %>
      <section>
        <%= link_to "Post", root_path, class: "btn btn-large btn-primary", style: "margin: 10px 0 10px 20px" %>
      </section>
    <% end %>
  </aside>
  <div class="span8">
    <% if @user.microposts.any? %>
      <h3>Posts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
        
