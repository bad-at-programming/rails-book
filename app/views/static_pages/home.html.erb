<% provide(:title, 'Home') %>

<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Sample App</h1>
  
    <%= link_to "Sign up", signup_path, class: "btn btn-large btn-primary" %>
    <p>or <%= link_to "Sign in", signin_path, style: "font-color: rgb(0,136, 204)" %></p>
  </div>

  <div id="rails-logo">
    <%= link_to image_tag("rails.png", alt: "Rails"), 'http://rubyonrails.org' %>
  </div>
<% end %>
